{% extends "layout.twig" %}

{% set title = 'Home' %}

{% block content %}
	<div class="container" style="margin-top: 15px">
		<div class="row">
			<div class="col-sm-12">
				{% for warrant in info.warrant %}
					<div class="alert alert-danger" data-toggle="modal" data-target="#warrantModal">You have a warrant for your arrest! Look at <strong>citation {{ warrant }}</strong> below for more information.</div>
				{% endfor %}

				{% for fine in info.fine %}
					<div class="alert alert-warning" data-toggle="modal" data-target="#fineModal">You have a fine for {{ fine.amount }} plus $24.50 in court fees. Look at <strong>citation {{ fine.citation }}</strong> below for more information.</div>
				{% endfor %}
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<h2>All data</h2>

				<div class="table-responsive">
					<table class="table table-striped table-condensed table-hover">
						<thead>
							<tr>
								<th>Citation number</th>
								<th>Court Date</th>
								<th>Court Address</th>
								<th>Violation Description</th>
								<th>Warrant status</th>
								<th>Warrant number</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							{% for result in results %}
								<tr {% if result.warrant_status == 'TRUE' %} class="danger" id="{{ result.warrant_number }}"{% elseif result.status == 'DISMISS WITHOUT COSTS' %}class="success"{% elseif result.status == 'CLOSED' %}class="info"{% elseif result.status == 'CONT FOR PAYMENT' %}class="warning"{% endif %}>
									<td>{{ result.citation_number }}</td>
									<td>{{ result.court_date }}</td>
									<td>{{ result.court_address }}, {{ result.court_location }}</td>
									<td>{{ result.violation_description }}</td>
									<td>{{ result.warrant_status }}</td>
									<td>{{ result.warrant_number }}</td>
									<td>{{ result.status }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="warrantModal" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

					<h4 class="modal-title">Your warrant</h4>
				</div>

				<div class="modal-body">
				blah blah blah
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="fineModal" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

					<h4 class="modal-title">Your fine</h4>
				</div>

				<div class="modal-body">
				blah blah blah
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
