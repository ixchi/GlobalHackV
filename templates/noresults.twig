{% extends "layout.twig" %}

{% set title = 'Home' %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
				<h1>Hi, {{ first }} {{ last }}</h1>

				<h2>We can't find any records for your name!</h2>

				<h4>If you're expecting something here, please verify the info you told us was correct.</h4>

				<div class="row">
					<div class="col-md-4 col-md-offset-4 col-sm-12">
						<div class="table-responsive">
							<table class="table table-condensed">
								<tr>
									<td>First Name</td>
									<td>{{ first }}</td>
								</tr>
								<tr>
									<td>Last Name</td>
									<td>{{ last }}</td>
								</tr>
								<tr>
									<td>Date of birth</td>
									<td>{{ birthday }}</td>
								</tr>
								<tr>
									<td>Driver Liscense ID </td>
									<td>{{ DL_ID }}</td>
								</tr>
							</table>
						</div>
					</div>
				</div>

				<a href="/" class="btn btn-primary btn-lg">Return Home</a>
			</div>
		</div>
	</div>
{% endblock %}
